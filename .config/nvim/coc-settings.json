{
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    },
    "golang": {
      "command": "gopls",
      "args": ["-rpc.trace"],
      "rootPatterns": [
        "go.mod"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "completeUnimported": true
      }
    }
  },
  "codeLens.enable": true,
  "diagnostic-languageserver.linters": {
      "openlynt": {
          "command": "openlynt",
          "rootPatterns": [".git"],
          "isStdout": false,
          "isStderr": true,
          "args": ["-path", "%filepath"],
          "sourceName": "openlynt",
          "formatLines": 1,
          "formatPattern": [
              "^[^:]+:(\\d+)\\s+(.*)$",
              {
                  "line": 1,
                  "message": [2]
              }
          ],
          "requiredFiles": [".openlynt.yml"]
      }
  },
  "diagnostic-languageserver.filetypes": {
    "go": ["golangci-lint", "openlynt"]
  },
  "diagnostic-languageserver.trace.server": "verbose",
  "diagnostic-languageserver.formatters": {
    "goimports": {
      "command": "goimports",
      "args": [],
      "rootPatterns": [
        ".git",
        "go.mod"
      ],
      "isStdout": true,
      "isStderr": false,
      "doesWriteToFile": false
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "go": "goimports"
  }
}

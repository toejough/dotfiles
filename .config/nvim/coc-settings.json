{
    "coc.preferences.formatOnSaveFiletypes": [
        "go",
        "json"
    ],
    "markdownlint.config": {
        "line_length": false,
        "MD024": false
    },
    "languageserver": {
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": [
                "elm"
            ],
            "rootPatterns": [
                "elm.json"
            ],
            "initializationOptions": {
                "elmAnalyseTrigger": "change"
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "completeUnimported": true,
                "analyses": {
                    "fillreturns": true,
                    "nonewvars": true,
                    "undeclaredname": true,
                    "unusedparams": true
                },
                "usePlaceholders": true,
            }
        },
        "web": {
            "command": "html-languageserver",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "html"
            ],
            "rootPatterns": [
                ".git"
            ]
        }
    }
}

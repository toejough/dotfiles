# Config
#config defaultToCurrentScreen true
config modalEscapeKey esc

# Switch Screens
#bind h:s,alt throw previous resize
#bind l:s,alt throw next resize

# Hints
bind h:alt hint qwertyuiop

# Grid
bind 0:g,alt grid
bind 1:g,alt grid 5 0:1,1 1:1,1
bind 2:g,alt grid 5 0:2,2 1:2,2
bind 3:g,alt grid 5 0:3,3 1:3,3
bind 4:g,alt grid 5 0:4,4 1:4,4
bind 5:g,alt grid 5 0:5,5 1:5,5
bind 6:g,alt grid 6 0:6,6 1:6,6
bind 7:g,alt grid 7 0:7,7 1:7,7

# Reload
bind r:alt relaunch

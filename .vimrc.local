UnBundle 'altercation/vim-colors-solarized'
UnBundle 'mattn/webapi-vim'
UnBundle 'mattn/gist-vim'
" snippets
UnBundle 'garbas/vim-snipmate'
UnBundle 'Shougo/neocomplete.vim.git'

" PHP
UnBundle 'spf13/PIV'
UnBundle 'arnaud-lb/vim-php-namespace'
